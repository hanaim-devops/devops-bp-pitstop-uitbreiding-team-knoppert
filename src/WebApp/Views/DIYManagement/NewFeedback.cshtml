@model Pitstop.WebApp.ViewModels.DIYManagementNewFeedbackViewModel
@{
    ViewData["Title"] = "DIY Feedback";
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<h3 id="PageTitle">DIY Management - new feedback</h3>

<form asp-controller="DIYManagement" asp-action="RegisterFeedback" method="post">
    <input asp-for="DIYFeedback.DIYEveningId" type="hidden" />
    <div class="form-group">
        <label asp-for="DIYFeedback.CustomerName"></label>
        <input asp-for="DIYFeedback.CustomerName" type="text" class="form-control" />
        <span asp-validation-for="DIYFeedback.CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DIYFeedback.Feedback"></label>
        <input asp-for="DIYFeedback.Feedback" type="text" class="form-control" />
        <span asp-validation-for="DIYFeedback.Feedback" class="text-danger"></span>
    </div>
    <span><button id="SubmitButton" type="submit" class="btn btn-default">Give feedback</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="DIYManagement" class="btn btn-default">Cancel</a></span>
</form>