@model Pitstop.WebApp.ViewModels.DIYNewViewModel
@{
    ViewData["Title"] = "DIY";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<h3 id="PageTitle">DIY - register avond</h3>

<form asp-controller="DIYManager" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="DIYNAvond.Title"></label>
        <input asp-for="DIYNAvond.Title" type="text" class="form-control" />
        <span asp-validation-for="DIYNAvond.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DIYNAvond.ExtraInfo"></label>
        <input asp-for="DIYNAvond.ExtraInfo" type="text" class="form-control" />
        <span asp-validation-for="DIYNAvond.ExtraInfo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DIYNAvond.StartDate"></label>
        <input asp-for="DIYNAvond.StartDate" type="text" class="form-control" />
        <span asp-validation-for="DIYNAvond.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DIYNAvond.EndDate"></label>
        <input asp-for="DIYNAvond.EndDate" type="text" class="form-control" />
        <span asp-validation-for="DIYNAvond.EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        @* Ik heb echt geen idee wat die Id moet zijn, moet ik mee gaan experimenteren *@
        <label asp-for="DIYNAvond.Id"></label>
        <select asp-for="SelectedReparateursId" asp-items="Model.Reparateurs" class="form-control"></select>
        <span asp-validation-for="SelectedReparateursId" class="text-danger"></span>
    </div>
  
    <span><button id="SubmitButton" type="submit" class="btn btn-default">Plan evening</button></span>
    <span><a id="CancelButton" asp-action="Index" asp-controller="DIYManager" class="btn btn-default">Cancel</a></span>
</form>